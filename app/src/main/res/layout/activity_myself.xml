<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    >

    <TextView
        android:id="@+id/tv_personal"
        android:text="个人中心"
        android:textSize="30dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:id="@+id/fl"
        android:layout_below="@id/tv_personal"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_no_avarta_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/tv_login_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未登录"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@id/fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <Button
            android:id="@+id/btn_info"
            android:text="我的信息"
            android:background="@drawable/myradius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"/>
        <Button
            android:id="@+id/btn_order"
            android:text="我的订单"
            android:background="@drawable/myradius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_history"
            android:text="我的足迹"
            android:background="@drawable/myradius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <Button
        android:background="@drawable/myradius"
        android:id="@+id/btn_login"
        android:layout_below="@id/ll"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="doClick"
            android:src="@drawable/footer_home_icon" />

        <ImageView
            android:id="@+id/iv_shoppingcar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="doClick"
            android:src="@drawable/footer_shopping_cart_icon" />

        <ImageView
            android:id="@+id/iv_my"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="doClick"
            android:src="@drawable/footer_user_active_icon" />
    </LinearLayout>
</RelativeLayout>
